<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:maps="clr-namespace:TK.CustomMap;assembly=TK.CustomMap"
    prism:ViewModelLocator.AutowireViewModel="True" 
    x:Class="FeatureDemo.Core.Views.MapPage"
    Title="{Binding Title}">
	<ContentPage.Content>
	</ContentPage.Content>
    <StackLayout>
        <Slider Value="{Binding ZoomLevel}" HorizontalOptions="FillAndExpand" Minimum="0" Maximum="1" />
        <maps:TKCustomMap x:Name="AtmMap" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" MapType="Hybrid" CustomPins="{Binding Pins}" MapCenter="{Binding CurrentLocation}" HasZoomEnabled="true" MapRegion="{Binding CurrentRegion, Mode=TwoWay}"/>
    </StackLayout>
</ContentPage>
